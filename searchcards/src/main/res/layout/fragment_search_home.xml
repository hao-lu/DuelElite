<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_search_box_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_box"
        android:translationZ="5dp"
        app:layout_constraintStart_toStartOf="@id/v_search_box_bg"
        app:layout_constraintTop_toTopOf="@id/v_search_box_bg"
        app:layout_constraintBottom_toBottomOf="@id/v_search_box_bg"
        app:layout_constraintEnd_toStartOf="@id/tv_search_box_hint"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/tv_search_box_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Search for card details, rulings, and tips"
        android:translationZ="5dp"
        app:layout_constraintTop_toTopOf="@id/v_search_box_bg"
        app:layout_constraintBottom_toBottomOf="@id/v_search_box_bg"
        app:layout_constraintEnd_toEndOf="@id/v_search_box_bg"
        app:layout_constraintStart_toEndOf="@id/iv_search_box_icon"/>

    <View
        android:id="@+id/v_search_box_bg"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/search_box_bg"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
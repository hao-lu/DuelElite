<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2e2e2e</item>
        <item name="colorPrimaryDark">#252525</item>
        <item name="colorAccent">#840032</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SearchSuggestion">
        <item name="autoCompleteTextViewStyle">@style/CustomAutoCompleteTextViewStyle</item>
        <item name="android:dropDownItemStyle">@style/CustomDropDownItemStyle</item>
        <item name="android:dropDownListViewStyle">@style/CustomDropDownListViewStyle</item>
        <item name="android:listPopupWindowStyle">@style/CustomListPopupWindowStyle</item>
        <!--<item name="android:dropDownSpinnerStyle">@style/test2</item>-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/CustomDropDownItemStyle</item>-->
        <!--<item name="textAppearanceSearchResultTitle">@style/CustomSearchResult</item>-->

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CustomAutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <!--<item name="android:popupBackground">#6C8EAD</item>-->
        <!--<item name="android:dropDownSelector">#8F6593</item>-->
        <!--<item name="android:dropDownWidth">30dp</item>-->
        <!--<item name="android:dropDownAnchor"></item>-->
    </style>

    <style name="CustomSearchResult" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textColor">#8F6593</item>
    </style>

    <style name="CustomDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomDropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">#2e2e2e</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomListPopupWindowStyle" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:layout_width">30dp</item>
        <item name="android:dropDownVerticalOffset">10dip</item>
    </style>

</resources>

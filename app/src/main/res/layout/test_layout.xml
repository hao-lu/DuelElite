<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="log"
            type="com.example.haolu.duelmaster.LifePointCalculator.LogItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="40dp"
                    android:background="@color/colorYugiRed"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/player_bar_color"
                    android:layout_marginStart="8dp">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{log.player}"
                    tools:text="PLAYER ONE"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="@+id/player_bar_color"
                    android:id="@+id/textView_cur_player"
                    app:layout_constraintVertical_bias="0.513"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{log.operation}"
                    tools:text="LOST"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/textView_cur_player"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/textView_operation"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(log.turnLP)}"
                    tools:text="1500"
                    android:textSize="16sp"
                    android:id="@+id/textView_turnLP"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/textView_operation"
                    android:layout_marginLeft="31dp"
                    app:layout_constraintVertical_bias="0.513"
                    android:layout_marginStart="31dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#9e9e9e"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/textView_turnLP"
                    android:layout_marginLeft="34dp"
                    android:id="@+id/divider_lp">
                </View>
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text=":"-->
                    <!--tools:text=":"-->
                    <!--android:textSize="16sp"-->
                    <!--android:id="@+id/textView4"-->
                    <!--app:layout_constraintTop_toTopOf="parent"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--app:layout_constraintBottom_toBottomOf="parent"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--app:layout_constraintLeft_toRightOf="@+id/textView3"-->
                    <!--android:layout_marginLeft="38dp"-->
                    <!--app:layout_constraintVertical_bias="0.513"-->
                    <!--android:layout_marginStart="38dp" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@{String.valueOf(log.totalLP)}"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toRightOf="@+id/divider_lp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.513"
                    tools:text="7500 "
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="8dp" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</layout>